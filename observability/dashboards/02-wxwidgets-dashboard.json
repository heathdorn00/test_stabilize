{
  "dashboard": {
    "title": "wxWidgets Services",
    "tags": ["wxwidgets", "cpp", "microservices"],
    "timezone": "browser",
    "schemaVersion": 36,
    "version": 1,
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "templating": {
      "list": [
        {
          "name": "service",
          "type": "query",
          "label": "Service",
          "datasource": "Prometheus",
          "query": "label_values(up{app_type=\"wxwidgets\"}, service)",
          "refresh": 1,
          "multi": true,
          "includeAll": true,
          "allValue": ".*"
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "type": "stat",
        "title": "wxWidgets Services Up",
        "gridPos": {"h": 4, "w": 4, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "sum(up{app_type=\"wxwidgets\", service=~\"$service\"})",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 5},
                {"color": "green", "value": 7}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "type": "stat",
        "title": "Total Request Rate",
        "gridPos": {"h": 4, "w": 4, "x": 4, "y": 0},
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{app_type=\"wxwidgets\", service=~\"$service\"}[5m]))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps"
          }
        }
      },
      {
        "id": 3,
        "type": "stat",
        "title": "Error Rate",
        "gridPos": {"h": 4, "w": 4, "x": 8, "y": 0},
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{app_type=\"wxwidgets\", service=~\"$service\", status=~\"5..\"}[5m])) / sum(rate(http_requests_total{app_type=\"wxwidgets\", service=~\"$service\"}[5m])) * 100",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 1},
                {"color": "red", "value": 5}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "type": "stat",
        "title": "P95 Latency",
        "gridPos": {"h": 4, "w": 4, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{app_type=\"wxwidgets\", service=~\"$service\"}[5m])) by (le))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 0.5},
                {"color": "red", "value": 1}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "type": "stat",
        "title": "Active Widget Instances",
        "gridPos": {"h": 4, "w": 4, "x": 16, "y": 0},
        "targets": [
          {
            "expr": "sum(wxwidgets_active_widgets{service=~\"$service\"})",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        }
      },
      {
        "id": 6,
        "type": "timeseries",
        "title": "Request Rate by Service",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{app_type=\"wxwidgets\", service=~\"$service\"}[5m])) by (service)",
            "legendFormat": "{{service}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 10
            }
          }
        }
      },
      {
        "id": 7,
        "type": "timeseries",
        "title": "Latency Percentiles",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, sum(rate(http_request_duration_seconds_bucket{app_type=\"wxwidgets\", service=~\"$service\"}[5m])) by (le, service))",
            "legendFormat": "{{service}} (P50)",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{app_type=\"wxwidgets\", service=~\"$service\"}[5m])) by (le, service))",
            "legendFormat": "{{service}} (P95)",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, sum(rate(http_request_duration_seconds_bucket{app_type=\"wxwidgets\", service=~\"$service\"}[5m])) by (le, service))",
            "legendFormat": "{{service}} (P99)",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth"
            }
          }
        }
      },
      {
        "id": 8,
        "type": "timeseries",
        "title": "Widget Operations (Create/Update/Delete)",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
        "targets": [
          {
            "expr": "sum(rate(wxwidgets_widget_operations_total{service=~\"$service\", operation=\"create\"}[5m])) by (service)",
            "legendFormat": "{{service}} - Create",
            "refId": "A"
          },
          {
            "expr": "sum(rate(wxwidgets_widget_operations_total{service=~\"$service\", operation=\"update\"}[5m])) by (service)",
            "legendFormat": "{{service}} - Update",
            "refId": "B"
          },
          {
            "expr": "sum(rate(wxwidgets_widget_operations_total{service=~\"$service\", operation=\"delete\"}[5m])) by (service)",
            "legendFormat": "{{service}} - Delete",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ops",
            "custom": {
              "drawStyle": "line",
              "fillOpacity": 20,
              "stacking": {"mode": "normal"}
            }
          }
        }
      },
      {
        "id": 9,
        "type": "timeseries",
        "title": "Memory Usage",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
        "targets": [
          {
            "expr": "sum(container_memory_working_set_bytes{pod=~\".*wxwidgets.*\", pod=~\".*$service.*\"}) by (pod) / 1024 / 1024",
            "legendFormat": "{{pod}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "MiB",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 10
            }
          }
        }
      },
      {
        "id": 10,
        "type": "timeseries",
        "title": "CPU Usage",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 20},
        "targets": [
          {
            "expr": "sum(rate(container_cpu_usage_seconds_total{pod=~\".*wxwidgets.*\", pod=~\".*$service.*\"}[5m])) by (pod)",
            "legendFormat": "{{pod}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 10
            }
          }
        }
      },
      {
        "id": 11,
        "type": "timeseries",
        "title": "Event Loop Processing Time",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 20},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(wxwidgets_event_loop_duration_seconds_bucket{service=~\"$service\"}[5m])) by (le, service))",
            "legendFormat": "{{service}} - P95",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth"
            }
          }
        }
      },
      {
        "id": 12,
        "type": "table",
        "title": "Service Details",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 28},
        "targets": [
          {
            "expr": "up{app_type=\"wxwidgets\", service=~\"$service\"}",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "Time": true,
                "job": true,
                "__name__": true,
                "app_type": true
              },
              "renameByName": {
                "service": "Service",
                "instance": "Instance",
                "version": "Version",
                "Value": "Status"
              }
            }
          }
        ],
        "fieldConfig": {
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "Status"},
              "properties": [
                {
                  "id": "mappings",
                  "value": [
                    {
                      "type": "value",
                      "options": {
                        "0": {"text": "Down", "color": "red"},
                        "1": {"text": "Up", "color": "green"}
                      }
                    }
                  ]
                }
              ]
            }
          ]
        }
      },
      {
        "id": 13,
        "type": "logs",
        "title": "Recent Error Logs",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 28},
        "targets": [
          {
            "expr": "{app_type=\"wxwidgets\", service=~\"$service\"} |= \"ERROR\" | json",
            "refId": "A",
            "datasource": "Loki"
          }
        ],
        "options": {
          "showTime": true,
          "showLabels": false,
          "showCommonLabels": false,
          "wrapLogMessage": true,
          "prettifyLogMessage": false,
          "enableLogDetails": true,
          "sortOrder": "Descending"
        }
      }
    ]
  }
}
