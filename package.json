{
  "name": "test-stabilize-infrastructure",
  "version": "1.0.0",
  "description": "Testing Infrastructure for RDB-002 - ACTUAL IMPLEMENTATION",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:mutation": "stryker run",
    "start": "ts-node src/api/server.ts",
    "dev": "ts-node-dev --respawn src/api/server.ts"
  },
  "keywords": ["testing", "jest", "mutation-testing"],
  "author": "@test_stabilize",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/supertest": "^2.0.12",
    "jest": "^29.5.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "@stryker-mutator/core": "^7.0.0",
    "@stryker-mutator/jest-runner": "^7.0.0",
    "typescript": "^5.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"],
    "testMatch": ["**/__tests__/**/*.test.ts", "**/*.test.ts"],
    "testPathIgnorePatterns": ["/node_modules/", "/examples/"],
    "coverageThreshold": {
      "global": {
        "branches": 60,
        "functions": 60,
        "lines": 60,
        "statements": 60
      }
    }
  }
}
