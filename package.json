{
  "name": "test-stabilize-infrastructure",
  "version": "1.0.0",
  "description": "Testing Infrastructure for RDB-002 - ACTUAL IMPLEMENTATION",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:mutation": "stryker run",
    "test:property": "jest src/__tests__/property/",
    "test:property:verbose": "jest src/__tests__/property/ --verbose",
    "test:security": "jest src/__tests__/security/",
    "test:security:coverage": "jest src/__tests__/security/ --coverage --collectCoverageFrom='src/security/**/*.ts'",
    "test:contracts": "jest tests/contracts/consumers/ --runInBand --testTimeout=60000",
    "test:contracts:all": "jest tests/contracts/ --runInBand --testTimeout=60000",
    "pact:consumer": "jest tests/contracts/consumers/ --runInBand --testTimeout=60000",
    "pact:publish": "pact-broker publish ./pacts --consumer-app-version=$npm_package_version --broker-base-url=${PACT_BROKER_URL:-http://localhost:9292}",
    "pact:verify": "jest tests/contracts/providers/ --runInBand --testTimeout=60000",
    "pact:can-i-deploy": "pact-broker can-i-deploy --pacticipant=${PACTICIPANT} --version=$npm_package_version --to-environment=production --broker-base-url=${PACT_BROKER_URL:-http://localhost:9292}",
    "security:scan": "npm audit --audit-level=high",
    "security:lint": "eslint . --ext .ts,.js --config .eslintrc.security.json",
    "security:hooks": "bash scripts/setup-security-hooks.sh",
    "start": "ts-node src/api/server.ts",
    "dev": "ts-node-dev --respawn src/api/server.ts"
  },
  "keywords": [
    "testing",
    "jest",
    "mutation-testing",
    "property-based-testing",
    "fast-check",
    "msw",
    "api-mocking"
  ],
  "author": "@test_stabilize",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@pact-foundation/pact": "^12.1.0",
    "@stryker-mutator/core": "^7.0.0",
    "@stryker-mutator/jest-runner": "^7.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.19.25",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "axios": "^1.6.0",
    "eslint": "^8.56.0",
    "eslint-plugin-security": "^1.7.1",
    "fast-check": "^4.3.0",
    "jest": "^29.5.0",
    "msw": "^2.12.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.ts",
      "**/*.test.ts",
      "**/*.pact.spec.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/examples/",
      "tests/contracts/providers/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 60,
        "functions": 60,
        "lines": 60,
        "statements": 60
      }
    }
  }
}
